---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "@fontsource-variable/inter";

const title = Astro.props.title || 'Eurobonus Charts';
const isLoggedIn = Astro.props.isLoggedIn;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="page-container">
			<div class="content-wrapper">
				<Navbar title={title} isLoggedIn={isLoggedIn} />
				<main>
					<slot />
				</main>
			</div>
			<Footer />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Inter Variable", sans-serif;
	}

	.page-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh; /* Full viewport height */
	}

	.content-wrapper {
		flex: 1 0 auto; /* Grow to push footer down */
	}

	main {
		margin: 0 auto;
		padding: 1rem;
		width: 100%;
		max-width: 1200px;
		padding-bottom: 3rem; /* Add padding to prevent content from being too close to footer */
	}
	
	@media (max-width: 768px) {
		main {
			width: 100%;
		}
	}
</style>
