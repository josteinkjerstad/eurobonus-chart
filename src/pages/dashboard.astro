---
export const prerender = false
import Layout from "../layouts/Layout.astro";
import { createServerClient, parseCookieHeader } from "@supabase/ssr";
import { calculateTotalBonusPoints } from "../helpers/calculations";
import { Charts } from "../components/charts/Charts";
import { getLocalUserId } from "../utils/localUser";
import type { Transaction } from "../models/transaction";
import type { Profile } from "../models/profile";

const { cookies, request } = Astro;
const supabase = createServerClient(
    import.meta.env.SUPABASE_URL,
    import.meta.env.SUPABASE_KEY,
    {
      cookies: {
        getAll() {
          return parseCookieHeader(request.headers.get("Cookie") ?? "");
        },
        setAll(cookiesToSet) {
          cookiesToSet.forEach(({ name, value, options }) =>
            cookies.set(name, value, options)
          );
        },
      },
    }
);

const userId = (import.meta.env.MODE === 'development') ? getLocalUserId() : (await supabase.auth.getUser()).data.user?.id;
const profile = (await supabase.from("profiles").select().eq("user_id", userId).single()).data as Profile;
const groupMembers = (await supabase.from("profiles").select().eq("parent_id", profile?.id)).data as Profile[];

if (!userId) {
  return redirect("/signin");
}

const { data: transactionsData} = await supabase.from("transactions").select("*").eq("user_id", userId).order("date", { ascending: true });

const transactions : Transaction[] = transactionsData ?? [];
const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long' };
const startDate = transactions.length > 0 ? new Date(transactions[0].date).toLocaleDateString('en-US', options) : '';

const sum = calculateTotalBonusPoints(transactions);

---
<Layout title="Dashboard">
  <h1>Welcome {profile?.display_name && profile.display_name }</h1>
  {transactions.length > 0 ? (
    <div>
      <p>You've earned a total of {sum.toLocaleString()} eurobonus points{startDate ? " since " + startDate : ''}.</p>
      <hr style="margin: 10px 0;" />
      <Charts transactions={transactions} profiles={[profile, ...groupMembers]}  client:load />
    </div>
  ) : (
    <p>Oops, no data found - <a href="/profile">upload your data here</a>.</p>
  )}
</Layout>